package br.com.alura.gerenciador.services;

import java.io.IOException;
import java.text.ParseException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import br.com.alura.gerenciador.modelo.Banco;

public class RemoveEmpresa {
	
	
	public void executa(HttpServletRequest request, HttpServletResponse response, Integer id) throws ParseException, ServletException, IOException {
		Integer paramId = Integer.parseInt(request.getParameter("id"));
		System.out.println(paramId);
		
		Banco banco = new Banco();
		banco.removerEmpresa(paramId);
		response.sendRedirect("listaEmpresas");
	}
}
