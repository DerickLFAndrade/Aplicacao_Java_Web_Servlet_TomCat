package br.com.alura.gerenciador.services;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class MostraEmpresa {
	
	private static SimpleDateFormat sdf =  new SimpleDateFormat("yyyy-MM-dd");
	
	public void executa(HttpServletRequest request, HttpServletResponse response) throws ParseException {
		System.out.println("Mostrando empresa");
		
		Integer id = Integer.valueOf(request.getParameter("id"));
		String nome = request.getParameter("id");
		Date data = sdf.parse(request.getParameter("dataAbertura"));
	}
}
